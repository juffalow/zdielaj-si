{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "src",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
